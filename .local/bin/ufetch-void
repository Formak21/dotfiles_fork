#!/bin/sh
#
# ufetch-void - tiny system info for void

## INFO

# user is already defined
host="$(hostname)"
os='Void'
kernel="$(uname -sr)"
uptime="$(uptime -p | sed 's/up //')"
packages="$(xbps-query -l | wc -l)"
flatpak="$(flatpak list | wc -l)"
shell="$(basename "${SHELL}")"

## UI DETECTION

parse_rcs() {
	for f in "${@}"; do
		wm="$(tail -n 1 "${f}" 2> /dev/null | cut -d ' ' -f 2)"
		[ -n "${wm}" ] && echo "${wm}" && return
	done
}

rcwm="$(parse_rcs "${HOME}/.xinitrc" "${HOME}/.xsession")"

ui='unknown'
uitype='UI'
if [ -n "${DE}" ]; then
	ui="${DE}"
	uitype='DE'
elif [ -n "${WM}" ]; then
	ui="${WM}"
	uitype='WM'
elif [ -n "${XDG_CURRENT_DESKTOP}" ]; then
	ui="${XDG_CURRENT_DESKTOP}"
	uitype='DE'
elif [ -n "${DESKTOP_SESSION}" ]; then
	ui="${DESKTOP_SESSION}"
	uitype='DE'
elif [ -n "${rcwm}" ]; then
	ui="${rcwm}"
	uitype='WM'
elif [ -n "${XDG_SESSION_TYPE}" ]; then
	ui="${XDG_SESSION_TYPE}"
fi

ui="$(basename "${ui}")"

## DEFINE COLORS

# probably don't change these
if [ -x "$(command -v tput)" ]; then
	bold="$(tput bold 2> /dev/null)"
	black="$(tput setaf 0 2> /dev/null)"
	red="$(tput setaf 1 2> /dev/null)"
	green="$(tput setaf 2 2> /dev/null)"
	yellow="$(tput setaf 3 2> /dev/null)"
	blue="$(tput setaf 4 2> /dev/null)"
	magenta="$(tput setaf 5 2> /dev/null)"
	cyan="$(tput setaf 6 2> /dev/null)"
	white="$(tput setaf 7 2> /dev/null)"
	reset="$(tput sgr0 2> /dev/null)"
fi

# you can change these
ic="${reset}"
c0="${reset}${cyan}"
c1="${reset}${green}"
c2="${reset}${magenta}"
c3="${reset}${yellow}"

## OUTPUT

cat <<EOF

${c1}      ___     ${c3}${USER}${c0}@${c2}${host}${reset}
${c1}     (${c2}.. ${c1}\    ${ic}🐧 ${c0}${os}${reset}
${c1}     (${c2}<> ${c1}|    ${ic}💛 ${c0}${kernel}${reset}
${c1}    //  \\ \\   ${ic}⏰ ${c0}${uptime}${reset}
${c1}   ( |  | /|  ${ic}📦 ${c3}${packages} (xbps) ${flatpak} (flatpak)${reset} 
${c1}  _${c1}/\\ __)/_)  ${ic}⌨️ ${c0}${shell}${reset}
${c3}  \/${c1}-____${c3}\/${reset}   ${ic}🖥️ ${c0}${ui}${reset}

EOF

