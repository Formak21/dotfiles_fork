#!/bin/sh

# Define the menu options with Font Awesome 4 icons
options=" Stream\n Terminal\n Explorer\n Browser\n Power"

# Use Tofi to create a menu with the options
choice=$(echo "$options" | fuzzel -d -f FontAwesome:size=15 -w 7 -l 5 -a center)

# Check the user's choice and launch the corresponding application
case "$choice" in
    " Stream")
        fuzz-streaming
        ;;
    " Terminal")
        foot
        ;;
    " Explorer")
        pcmanfm-qt
        ;;
    " Browser")
        flatpak run io.gitlab.librewolf-community
        ;;
    " Power")
        fuzz-power
        ;;
    *)
        echo "Invalid choice: $choice" >&2
        exit 1
        ;;
esac
